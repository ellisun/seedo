# <%=: name | capitalize %> controllers

mongoose   = require 'mongoose'
<%=: name | capitalize %>       = mongoose.model  '<%=: name %>'

module.exports = 

  # Lists all <%=: name %>s
  all: (req, res) ->
    <%=: name | capitalize %>.find {}, (err, <%=: name %>s) ->
      res.send <%=: name %>s
        
  # Gets <%=: name %> by id
  get: (req, res) ->
    <%=: name | capitalize %>.findById req.params.id, (err, <%=: name %>) ->
      if not err
        res.send <%=: name %>
      else
        res.send 500, err
      
  # Creates new <%=: name %> with data from `req.body`
  create: (req, res) ->
    <%=: name %> = new <%=: name | capitalize %> req.body
    <%=: name %>.save (err, <%=: name %>) ->
      if not err
        res.send <%=: name %>
      else
        res.send 500, err
             
  # Updates <%=: name %> with data from `req.body`
  update: (req, res) ->
    <%=: name | capitalize %>.findByIdAndUpdate req.params.id, { $set: req.body }, (err, <%=: name %>) ->
      if not err
        res.send <%=: name %>
      else
        res.send 500, err
    
  # Deletes <%=: name %> by id
  delete: (req, res) ->
    <%=: name | capitalize %>.findByIdAndRemove req.params.id, (err) ->
      if not err
        res.send {}
      else
        res.send 500, err
