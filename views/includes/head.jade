  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
  meta(http-equiv='Content-type', content='text/html;charset=UTF-8')

  title= settings.app.name+' - '+title
  meta(name="description", content=settings.app.description)

  link(href='/favicon.ico', rel='shortcut icon', type='image/x-icon')
  
  // Opengraph tags
  meta(property='fb:app_id', content='')
  meta(property='og:title', content='#{settings.app.name} - #{title}')
  meta(property='og:description', content=settings.app.description)
  meta(property='og:type', content='website')
  meta(property='og:url', content=settings.app.url)
  meta(property='og:image', content='')
  meta(property='og:site_name', content=settings.app.name)
  meta(property='fb:admins', content='')

  link(rel='stylesheet', href='//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css')
  
  != css('site')
  
